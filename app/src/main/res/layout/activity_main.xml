<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_row="5"
    android:layout_gravity="bottom"
    android:layout_marginBottom="40dp"
    android:id="@+id/calculator_layout"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:ems="20"
        android:inputType="number"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="AC"
            android:gravity="center"
            style="@style/textAppreance"
            android:id="@+id/btn_0_0"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:padding="24dp"
            android:id="@+id/btn_0_1"
            android:src="@drawable/ic_baseline_backspace_24"
            style="@style/textAppreance"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="%"
            android:id="@+id/btn_0_2"
            style="@style/textAppreance"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/btn_0_3"
            android:text="/"
            style="@style/textAppreance"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="7"
            style="@style/textAppreance"
            android:textStyle="bold"
            android:id="@+id/btn_1_0"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:id="@+id/btn_1_1"
            style="@style/textAppreance"
            android:text="8"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="9"
            android:id="@+id/btn_1_2"
            style="@style/textAppreance"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/btn_1_3"
            android:text="*"
            style="@style/textAppreance"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="4"
            style="@style/textAppreance"
            android:textStyle="bold"
            android:id="@+id/btn_2_0"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:id="@+id/btn_2_1"
            style="@style/textAppreance"
            android:text="5"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="6"
            android:id="@+id/btn_2_2"
            style="@style/textAppreance"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/btn_2_3"
            android:text="-"
            style="@style/textAppreance"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="1"
            style="@style/textAppreance"
            android:textStyle="bold"
            android:id="@+id/btn_3_0"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:id="@+id/btn_3_1"
            style="@style/textAppreance"
            android:text="2"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="3"
            android:id="@+id/btn_3_2"
            style="@style/textAppreance"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/btn_3_3"
            android:text="+"
            style="@style/textAppreance"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_cached_24"
            android:padding="26dp"
            android:id="@+id/btn_4_0"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:id="@+id/btn_4_1"
            style="@style/textAppreance"
            android:text="0"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="."
            android:id="@+id/btn_4_2"
            style="@style/textAppreance"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/btn_4_3"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="20dp"
            android:src="@drawable/equal_icon"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>
