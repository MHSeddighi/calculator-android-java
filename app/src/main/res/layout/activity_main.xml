<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="40dp"
        android:paddingTop="100dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="1"
            android:textStyle="bold"
            android:id="@+id/btn_0_0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_0_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_1_0"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_0_1"
            android:text="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_0_2"
            app:layout_constraintStart_toStartOf="@id/btn_0_0"
            app:layout_constraintTop_toBottomOf="@id/btn_1_1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="3"
            android:id="@+id/btn_0_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_0_3"
            app:layout_constraintStart_toStartOf="@id/btn_0_1"
            app:layout_constraintTop_toBottomOf="@id/btn_1_2"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_0_3"
            android:text=""
            android:layout_row="0"
            android:layout_column="3"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text=""
            android:id="@+id/btn_1_0"
            android:layout_row="1"
            android:layout_column="0"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text=""
            android:id="@+id/btn_1_1"
            android:layout_row="1"
            android:layout_column="1"/>
        <Button
            android:layout_width="220px"
            android:layout_height="200px"
            android:text=""
            android:id="@+id/btn_1_2"
            android:layout_row="1"
            android:layout_column="2"/>
        <Button
            android:layout_width="220px"
            android:layout_height="200px"
            android:text=""
            android:id="@+id/btn_1_3"
            android:layout_row="1"
            android:layout_column="3"/>

        <Button
            android:layout_width="220px"
            android:layout_height="200px"
            android:text=""
            android:id="@+id/btn_2_0"
            android:layout_row="2"
            android:layout_column="0"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_2_1"
            android:text=""
            android:layout_row="2"
            android:layout_column="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text=""
            android:id="@+id/btn_2_2"
            android:layout_row="2"
            android:layout_column="2"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text=""
            android:id="@+id/btn_2_3"
            android:layout_row="2"
            android:layout_column="3"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text=""
            android:id="@+id/btn_3_0"
            android:layout_row="3"
            android:layout_column="0"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text=""
            android:id="@+id/btn_3_1"
            android:layout_row="3"
            android:layout_column="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text=""
            android:id="@+id/btn_3_2"
            android:layout_row="3"
            android:layout_column="2"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text=""
            android:id="@+id/btn_3_3"
            android:layout_row="3"
            android:layout_column="3"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>