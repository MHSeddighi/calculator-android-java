<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_row="5"
    android:layout_gravity="bottom"
    android:layout_margin="20dp"
    android:id="@+id/calculator_layout"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="1"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:id="@+id/btn_0_0"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:id="@+id/btn_0_1"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:text="2"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="3"
            android:id="@+id/btn_0_2"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/btn_0_3"
            android:text="4"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="5"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textStyle="bold"
            android:id="@+id/btn_1_0"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:id="@+id/btn_1_1"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:text="6"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="7"
            android:id="@+id/btn_1_2"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/btn_1_3"
            android:text="8"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="9"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textStyle="bold"
            android:id="@+id/btn_2_0"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:id="@+id/btn_2_1"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:text="10"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="11"
            android:id="@+id/btn_2_2"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/btn_2_3"
            android:text="12"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="13"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textStyle="bold"
            android:id="@+id/btn_3_0"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:id="@+id/btn_3_1"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:text="14"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="15"
            android:id="@+id/btn_3_2"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/btn_3_3"
            android:text="16"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_weight="1"
            android:text="17"
            android:textStyle="bold"
            android:id="@+id/btn_4_0"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:id="@+id/btn_4_1"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:text="18"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="19"
            android:id="@+id/btn_4_2"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/btn_4_3"
            android:text="20"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>
