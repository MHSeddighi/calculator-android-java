<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_row="5"
    android:layout_gravity="bottom"
    android:layout_margin="20dp"
    android:id="@+id/calculator_layout"
    android:orientation="horizontal"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="1"
            android:id="@+id/btn_0_0"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/btn_0_1"
            android:text="2"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="3"
            android:id="@+id/btn_0_2"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_0_3"
            android:text="4"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="1"
            android:textStyle="bold"
            android:id="@+id/btn_1_0"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/btn_1_1"
            android:text="2"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="3"
            android:id="@+id/btn_1_2"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_1_3"
            android:text=""
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="1"
            android:textStyle="bold"
            android:id="@+id/btn_2_0"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/btn_2_1"
            android:text="2"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="3"
            android:id="@+id/btn_2_2"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_2_3"
            android:text=""
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="1"
            android:textStyle="bold"
            android:id="@+id/btn_3_0"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/btn_3_1"
            android:text="2"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="3"
            android:id="@+id/btn_3_2"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_3_3"
            android:text=""
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="1"
            android:textStyle="bold"
            android:id="@+id/btn_4_0"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/btn_4_1"
            android:text="2"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="3"
            android:id="@+id/btn_4_2"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_4_3"
            android:text=""
            android:layout_weight="1"/>

    </LinearLayout>



</LinearLayout>
